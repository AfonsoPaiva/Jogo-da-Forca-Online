<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:layout_marginTop="50dp">


    <!-- Campo para o nome da sala -->

    <!-- Campo para o número máximo de jogadores -->

    <EditText
        android:id="@+id/roomNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da sala"
        android:inputType="textNoSuggestions" />


    <EditText
        android:id="@+id/maxPlayersEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Máximo de jogadores"
        android:inputType="number" />

    <EditText
        android:id="@+id/roundsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter number of rounds"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>
    <!-- Botão para criar a sala -->

    <Button
        android:id="@+id/createRoomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar sala" />

</LinearLayout>
